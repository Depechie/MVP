<?xml version="1.0" encoding="UTF-8"?>
<pages:BaseContentPage xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MVP.Pages.WizardVisibilityPage"
    xmlns:vm="clr-namespace:MVP.ViewModels"
    xmlns:pages="clr-namespace:MVP.Pages"
    xmlns:effects="clr-namespace:Xamarin.CommunityToolkit.Effects;assembly=Xamarin.CommunityToolkit"
    xmlns:icons="clr-namespace:MVP.Styles"
    x:DataType="vm:WizardVisibilityViewModel"
    x:TypeArguments="vm:WizardVisibilityViewModel"
    xmlns:local="clr-namespace:MVP">

    <local:AppFrame x:Name="appFrame" Title="Visibility" effects:SafeAreaEffect.SafeArea="false,true,false,false"
                    ShowBackButton="True" IsModal="False">
        <local:AppFrame.Content>
            <Grid>
                <CollectionView ItemsSource="{Binding Visibilities}"
                            SelectedItem="{Binding SelectedVisibility}"
                            SelectionMode="Single"
                            ItemTemplate="{StaticResource visibility_item}"
                            Scrolled="CollectionView_Scrolled">
                    <CollectionView.Header>
                        <StackLayout>
                            <Label Margin="24,0" Text="Almost done" FontSize="28" FontFamily="{StaticResource font_bold}" />

                            <Label Margin="24,0,24,16" Text="Who should be able to see this activity?"
                                   FontSize="16" TextColor="{StaticResource dark_gray}" />
                        </StackLayout>
                    </CollectionView.Header>
                    <CollectionView.Footer>
                        <BoxView HeightRequest="40" />
                    </CollectionView.Footer>
                </CollectionView>
            </Grid>
        </local:AppFrame.Content>
    </local:AppFrame>

